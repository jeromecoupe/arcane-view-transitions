{% extends "layouts/base.njk" %}

{% set metaTitle = name + " - " + site.metaTitle %}

{% set pageId = "character" %}

{% block htmlhead %}
  <script type="speculationrules">
    {
      "prerender": [
        {
          "urls": [ "/" ],
          "eagerness": "moderate"
        }
      ]
    }
  </script>
{% endblock %}

{% block content %}
  <div class="c-section">
    <div class="l-container">

      <div class="c-character">
        <div class="c-character__content">
          <h1 class="c-h1  u-mbe-xxs">{{ name }}</h1>
          <p class="c-character__role">{{ role }}</p>
          <div>
            {{ content|safe }}
          </div>
          <p><a class="c-backlink" href="/">All characters</a></p>
        </div>
        <div 
          class="c-character__media"
          style="view-transition-name: {{ page.fileSlug }}">
          <img src="/assets/img/characters/800x800/{{ image }}"
               srcset="/assets/img/characters/800x800/{{ image }} 800w, 
                       /assets/img/characters/1024x1024/{{ image }} 1024w"
               sizes="(min-width: 750px) 66vw,
                      100vw"
               class="c-character__img  o-fluidimg  u-radius-s"
               width="1024"
               height="1024"
               decoding="async"
               alt="{{ name }}">
        </div>
      </div>

    </div>
  </div>
{% endblock %}